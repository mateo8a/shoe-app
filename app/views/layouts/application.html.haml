!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title ShoeApp
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    .app-header
      .topmost-header
        .app-title
          %h1
            = header_title
        .auth-buttons
          - if user_signed_in?
            = "Hello, #{current_user.first_name} - ("
            = link_to 'Logout', destroy_user_session_path, method: :delete
            = ")"
          - else
            = link_to 'Log in', new_user_session_path
      .nav-buttons
        - if current_user.try(:organization)
          %a{:href => new_shoe_path}
            %button.nav-button New item
          %a{:href => shoes_path}
            %button.nav-button List items
          - if current_user.try(:superuser?)
            %a{:href => product_types_path}
              %button.nav-button List product types
          - if current_user.try(:admin?)
            %a{:href => organizations_path}
              %button.nav-button Organizations
            %a{:href => users_path}
              %button.nav-button Users
    %p.notice= notice
    %p.alert= alert
    = yield
    .footer

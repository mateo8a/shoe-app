%h1 Listing product types

%table
  %thead
    %tr
      %th Name
      %th
      %th
      %th

  %tbody
    - @product_types.each do |pt|
      %tr
        %td= pt.name
        %td= link_to 'Show', pt
        - if current_user.organization.shoes.none? { |s| s.product_type == pt.name }
          %td= link_to 'Edit', edit_product_type_path(pt)
          %td= link_to 'Destroy', pt, method: :delete, data: { confirm: 'Are you sure?' }
        - else
          %td
          %td

%br

= link_to 'New Product Type', new_product_type_path
